#include<stdio.h>
#include<string.h>
#include<unistd.h> // sleep
#include<sys/socket.h>
#include<arpa/inet.h>
#include"debug.h"
#include<errno.h> // strerror
#include"server_addr.h"

int main(int argc , char *argv[])
{

	int connect_to_remote_server(){
		int socket_desc;
		struct sockaddr_in server;
		server.sin_addr.s_addr = inet_addr(SRV_IP);
		server.sin_family = AF_INET;
		server.sin_port = htons(SRV_PORT);
		int myerr;

		//Create socket
		socket_desc = socket(AF_INET , SOCK_STREAM , 0);
		while (socket_desc == -1)
		{
			//printf("Could not create socket\n");
			myerr = errno;
			error_printf("Could not create socket, error num : %d (%s)\n", myerr, strerror(myerr));
			socket_desc = socket(AF_INET , SOCK_STREAM , 0);
		}

		//Connect to remote server

		if (connect(socket_desc , (struct sockaddr *)&server , sizeof(server)) == -1)
		{
			//puts("connect error\n");
			myerr = errno;
			error_printf("connect error, error num : %d (%s)\n", myerr, strerror(myerr));
		}

		puts("Connected\n");
	}

	while(1){
		//Send some data
		char *message;
		message = "mooordu !\n";
		socket_desc = connect_to_remote_server();
		while( send(socket_desc , message , strlen(message) , 0) == -1)
		{
			//puts("Send failed\n");

			int myerr = errno;
			error_printf("Send failed, error num : %d (%s)\n", myerr, strerror(myerr));
		}
		puts("Data Sent\n");
		sleep(2);
	}

	return 0;
}
